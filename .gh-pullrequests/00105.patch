From 58ef2866aa573cf1154f27406ecaf42cc8439728 Mon Sep 17 00:00:00 2001
From: Wei Tang <hi@that.world>
Date: Sat, 29 Jun 2019 21:19:06 +0200
Subject: [PATCH 1/2] Add well-known location for ecips

---
 .well-known/known.json |  3 +++
 .well-known/specs.json | 21 +++++++++++++++++++++
 _config.yml            |  2 ++
 3 files changed, 26 insertions(+)
 create mode 100644 .well-known/known.json
 create mode 100644 .well-known/specs.json

diff --git a/.well-known/known.json b/.well-known/known.json
new file mode 100644
index 00000000..344e4f3e
--- /dev/null
+++ b/.well-known/known.json
@@ -0,0 +1,3 @@
+[
+  "ecips.that.world"
+]
diff --git a/.well-known/specs.json b/.well-known/specs.json
new file mode 100644
index 00000000..e49385d7
--- /dev/null
+++ b/.well-known/specs.json
@@ -0,0 +1,21 @@
+---
+layout: null
+---
+
+[
+    {% for page in site.specs %}
+    {
+        "uri": "ecips.ethereumclassic.org/{{ page.slug }}",
+        "documentUrl": "https://ecips.ethereumclassic.org{{ page.id }}",
+        {% if page["discussions-to"] != undefined %}
+        "discussionUrl": "{{ page["discussions-to"] }}",
+        {% endif %}
+        {% if page.created != undefined %}
+        "createdAt": "{{ page.created }}",
+        {% endif %}
+        "status": "{{ page.status }}",
+        "author": "{{ page.author }}"
+    }
+    {% if forloop.last %}{% else %},{% endif %}
+    {% endfor %}
+]
diff --git a/_config.yml b/_config.yml
index adc9263c..41b58794 100644
--- a/_config.yml
+++ b/_config.yml
@@ -8,6 +8,8 @@ url: "http://ecips.ethereumclassic.org"
 markdown: kramdown
 theme: minima
 
+include: [".well-known"]
+
 header_pages:
  - all.html
  - core.html

